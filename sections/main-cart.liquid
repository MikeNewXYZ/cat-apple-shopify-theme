<template x-data x-if="$store.cart.data.item_count > 0">
  <div class="container">
    <h1 class="text-4xl md:text-5xl font-semibold text-center mb-8 lg:mb-16">
      Shopping Cart
    </h1>
  
    <div class="hidden lg:grid grid-cols-7 text-3xl font-semibold">
      <h3 class="col-span-4">Product</h3>
  
      <h3 class="col-span-1">Quantity</h3>
  
      <h3 class="col-span-2 text-right">Total</h3>
    </div>
  
    <hr class="divider divider-primary mt-2" />
  
    <div
      class="flex flex-col"
      x-data
    >
      <template x-for="(cartItem, index) in $store.cart.data.items">
        {% render 'cart-item' %}
      </template>
    </div>


    <div class="flex flex-col gap-2 lg:items-end lg:text-right mt-8">
      <h3 class="text-3xl">
        <span class="font-semibold">Total:</span>
        <span
          x-text="Shopify.formatMoney(
            $store.cart.data.total_price,
            '{{ cart.currency.symbol }}'
          )"
        >
        </span>
      </h3>

      <p>
        Taxes & shipping calculated at checkout.
      </p>

      <a
        class="btn btn-primary w-full lg:max-w-xs text-lg gap-2 mt-4"
        href="/checkout"
      >
        {% render 'icon',
          type: 'logout',
          class: 'w-6 h-6'
        %}

        <span>Checkout</span>
      </a>
    </div>
  </div>
</template>

<template x-data x-if="$store.cart.data.item_count === 0">
  <div class="container text-center">
    <h1 class="text-4xl md:text-5xl font-semibold">
      No Items Found!
    </h1>

    <h3 class="text-xl md:text-2xl font-light mt-6">
      <span>
        You have no items in your cart,
      </span>

      <a
        class="link inline-flex"
        href="{{ routes.all_products_collection_url }}"
      >
        click here
      </a>

      <span>
        to browse products.
      </span>
    </h3>

  </div>
</template>

{% schema %}
{
  "name": "Cart",
  "tag": "section"
}
{% endschema %}