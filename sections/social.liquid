      "id": "description_richtext",
      "label": "Description text",
      "default": "<p>Lorem ipsum dolor, sit amet consectetur adipisicing elit.</p>"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "checkbox",
      "id": "show_link",
      "label": "Show link",
      "default": true
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
